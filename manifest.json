{
    "manifest_version": 3,
    "name": "Wikipedia Definition Finder",
    "version": "1.0",
    "description": "Fetches and displays definitions from Wikipedia",
    "permissions": ["activeTab", "scripting", "storage"],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  